<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Result_For_MobileNo">


    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#290A45"
        android:gravity="center"
        android:text="@string/avaiable_results_for_number"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/testLay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/header"
        android:background="#290A45"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/SRF_id"
            android:layout_width="114dp"
            android:layout_height="40dp"
            android:layout_weight="25"

            android:gravity="center"
            android:hint="SRF ID"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="#FFFFFF"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_weight="25"
            android:gravity="center"
            android:hint="Name of the person"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
          />

        <TextView
            android:id="@+id/date"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_weight="25"
            android:gravity="center"
            android:hint="Date of Swabcollection"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
           />

        <TextView
            android:id="@+id/result"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_weight="25"
            android:gravity="center"
            android:hint="Result"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
         />

    </LinearLayout>


    <ListView
        android:id="@+id/mListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/testLay"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="@dimen/cardview_compat_inset_shadow" />

    </RelativeLayout>

