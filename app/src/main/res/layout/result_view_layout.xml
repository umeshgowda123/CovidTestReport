<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:id="@+id/testLay">

    <TextView
        android:id="@+id/SRF_id"
        android:layout_width="114dp"
        android:layout_height="40dp"
        android:layout_weight="25"
        android:gravity="center"
        android:hint="SRF_id"

        android:textAlignment="center" />

    <TextView
        android:id="@+id/name"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_weight="25"
        android:gravity="center"
        android:textAlignment="center"
        android:hint="Name of the person"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_weight="25"
        android:gravity="center"
        android:textAlignment="center"
        android:hint="Date of Swab Collection"  />

    <TextView
        android:id="@+id/result"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_weight="25"
        android:gravity="center"
        android:hint="Result"
        android:textAlignment="center" />
    <TextView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:id="@+id/age" />
    <TextView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:id="@+id/name_of_lab" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:id="@+id/icmr" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:id="@+id/gender" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:id="@+id/address" />
    <TextView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:id="@+id/sample_date" />
    <TextView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:id="@+id/result_date" />
    <TextView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:id="@+id/type_of_test" />
    <TextView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:id="@+id/state_p_code" />


</LinearLayout>